{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "noEmit": true,
        "types": [
            "node",
            "jest"
        ],
        "baseUrl": ".",
        "paths": {
            "@crystaldb/core": [
                "./packages/core/src"
            ],
            "@crystaldb/core/*": [
                "./packages/core/src/*"
            ],
            "@crystaldb/node": [
                "./packages/node/src"
            ],
            "@crystaldb/node/*": [
                "./packages/node/src/*"
            ],
            "@crystaldb/react": [
                "./packages/react/src"
            ],
            "@crystaldb/react/*": [
                "./packages/react/src/*"
            ]
        }
    },
    "include": [
        "packages/**/*.ts",
        "tests/**/*.ts",
        "jest.config.ts"
    ],
    "ts-node": {
        "transpileOnly": true
    }
}